server{
        listen 80 default_server;
        listen [::]:80 default_server;
        server_name {{ domain_name }};
        return 301 https://{{ domain_name }}$request_uri;
}

server {
        listen 443 ssl default_server;
        listen [::]:443 ssl default_server;

        server_name {{ domain_name }};
        charset utf-8;

        client_max_body_size 75M;

        location / {
            include uwsgi_params;
            uwsgi_pass unix:/tmp/flaskapp.sock;
        }
}
